CXX = clang++
CXXFLAGS = -std=c++23 -Wall -Wextra -pedantic -O2 -v
LDFLAGS = -lcurl

SOURCES = test.cpp webUtilsCurlPost.cpp
OBJECTS = $(SOURCES:.cpp=.o)
EXEC = curlPostTest

all: $(EXEC)

$(EXEC): $(OBJECTS)
	$(CXX) $(OBJECTS) -o $(EXEC) $(LDFLAGS)

%.o: %.cpp
	$(CXX) -c $(CXXFLAGS) $< -o $@

clean:
	rm -f $(OBJECTS)

.PHONY: all clean
